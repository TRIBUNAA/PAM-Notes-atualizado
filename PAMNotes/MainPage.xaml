<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PAMNotes.MainPage">

    <VerticalStackLayout
        Padding="30,0"
        Spacing="25">
        <Label x:Name="TextLabel"/>
        <Editor Placeholder="Digite aqui a sua anotação" HeightRequest="300" x:Name="NoteEditor"/>
        <HorizontalStackLayout Spacing="16" HorizontalOptions="Center">   
        <Button Text="Salvar" WidthRequest="120" x:Name="SaveButton" Clicked="SaveButton_Clicked"/>
        <Button Text="Apagar" WidthRequest="120" x:Name="DeleteButton" Clicked="DeleteButton_Clicked"/>
        </HorizontalStackLayout>    
    </VerticalStackLayout>

</ContentPage>
